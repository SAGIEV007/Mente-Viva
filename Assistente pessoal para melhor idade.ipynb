# FunÃ§Ã£o agregada de notÃ­cias
def aggregated_news(topic: str) -> str:
    try:
        raw = news_search(topic)
        filt = news_filter(raw)
        top3 = news_review(filt)
        return top3
    except Exception as e:
        return f"âŒ Erro no fluxo de notÃ­cias: {e}"

